<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/votenyc" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_vote"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:background="#FFF00F"
        android:hint="@string/edit_address" />

    <EditText
        android:id="@+id/et_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_address"
        android:layout_alignStart="@+id/et_address"
        android:layout_below="@+id/et_address"
        android:layout_marginTop="10dp"
        android:width="250dp"
        android:background="#FFF00F"
        android:hint="@string/edit_city" />

    <EditText
        android:id="@+id/et_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_city"
        android:layout_alignStart="@+id/et_city"
        android:layout_below="@+id/et_city"
        android:layout_marginTop="12dp"
        android:width="250dp"
        android:background="#FFF00F"
        android:hint="@string/edit_state" />

    <EditText
        android:id="@+id/et_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_state"
        android:layout_alignStart="@+id/et_state"
        android:layout_below="@+id/et_state"
        android:layout_marginTop="15dp"
        android:width="250dp"
        android:background="#FFF00F"
        android:hint="@string/edit_zip" />


    <ImageView
        android:id="@+id/iv_ballot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_officials"
        android:src="@drawable/ballot" />

    <ImageView
        android:id="@+id/iv_location_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_zip"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/et_zip"
        android:layout_toStartOf="@+id/et_zip"
        android:clickable="true"
        android:src="@drawable/location_pin" />

    <TextView
        android:id="@+id/tv_officials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_officials"
        android:layout_alignLeft="@+id/iv_officials"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/iv_officials"
        android:layout_alignStart="@+id/iv_officials"
        android:layout_below="@+id/iv_officials"
        android:clickable="true"
        android:text="Your Elected Officials" />

    <ImageView
        android:id="@+id/iv_officials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_location_pin"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/iv_bill"
        android:layout_toStartOf="@+id/iv_bill"
        android:clickable="true"
        android:src="@drawable/official" />

    <TextView
        android:id="@+id/tv_location_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_officials"
        android:layout_alignBottom="@+id/tv_officials"
        android:layout_alignEnd="@+id/iv_location_pin"
        android:layout_alignLeft="@+id/iv_location_pin"
        android:layout_alignRight="@+id/iv_location_pin"
        android:layout_alignStart="@+id/iv_location_pin"
        android:text="Polling Place" />

    <TextView
        android:id="@+id/tv_nextelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_ballot"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/iv_ballot"
        android:layout_below="@+id/iv_ballot"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Next Election" />

    <ImageView
        android:id="@+id/iv_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_location_pin"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/iv_ballot"
        android:layout_toStartOf="@+id/iv_ballot"
        android:clickable="true"
        android:src="@drawable/bill_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_bill"
        android:layout_alignRight="@+id/iv_bill"
        android:layout_below="@+id/iv_ballot"
        android:text="@string/recent_bills" />


</RelativeLayout>